{
  "manifest_version": 3,
  "name": "GCA4G (Gemini Code Assist for GAS)",
  "version": "1.0",
  "description": "Enhances the Google Apps Script editor with Gemini-powered code generation and modification capabilities.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "https://script.googleapis.com/"
  ],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_API_CLIENT_ID",
    "scopes": [
      "https://www.googleapis.com/auth/script.projects"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://script.google.com/home/projects/*/edit"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com/ https://play.google.com; script-src-elem 'self' https://apis.google.com; style-src-elem 'self' 'unsafe-inline';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "diff.min.js",
        "diff2html.min.js",
        "diff2html.min.css",
        "images/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}